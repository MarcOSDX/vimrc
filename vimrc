" Basic settings
set nocompatible
set noswapfile
set ignorecase
set nowrap
set encoding=utf8
set history=1000

" Backup settings
set backup
set backupdir=~/.vim_backup/ " only work on unix systems

" Indent settings
set autoindent
set smartindent
set tabstop=4
set shiftwidth=4

" Visual settings
set number
set relativenumber
set laststatus=2
